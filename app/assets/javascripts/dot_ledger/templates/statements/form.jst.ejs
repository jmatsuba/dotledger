<div class="page-header">
  <h1>Import Statement <small><%- accountName %></small></h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="file_type" class="col-md-4 control-label">File Type</label>
        <div class="col-md-5">
          <select id="file_type" disabled name="file_type">
            <option value="pc-financial-csv">PC Financial CSV</option>
            <option value="ofx">OFX</option>
          </select>
        </div>
        <div class="errors col-md-5"></div>
      </div>
      <div class="form-group">
        <label for="balance" class="col-md-4 control-label">Balance</label>
        <div class="col-md-5">
          <input type="text" id="balance" name="balance" />
        </div>
        <div class="errors col-md-5"></div>
      </div>
      <div class="form-group">
        <label for="import_file" class="col-md-4 control-label">File</label>
        <div class="col-md-5">
          <input type="file" id="import_file" name="file" />
        </div>
        <div class="errors col-md-5"></div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <button type="submit" data-loading-text="Importing..." class="save btn btn-default" title="Import">Import</button>
          <a class="btn btn-link" href="<%= DotLedger.path.showAccount({id: accountId}) %>" title="Cancel">Cancel</a>
        </div>
      </div>
    </form>
    </div>
  </div>
</div>
